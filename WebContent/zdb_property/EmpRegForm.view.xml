<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="zdb_property.EmpRegForm" 
		xmlns:html="http://www.w3.org/1999/xhtml"
		xmlns:form="sap.ui.layout.form"
		>
	<Page title="Title">
		<content>
	       <form:SimpleForm>
	           <form:title>
	               <core:Title text="Company Data"/>
	           </form:title>
	           <form:content>
	                <Label text="Name"/>
	                <Text text="{/name}"/>
	                <Label text="Address-City"/>
	                <Text id="idCity"/>
	           </form:content>
	           
	       </form:SimpleForm>
	       
	       <form:SimpleForm binding="{/empInfo/2}">
	           <form:title>
	               <core:Title text="Employee Data"/>
	           </form:title>
	           <form:content>
	                <Label text="Name"/>
	                <Text text="{name}"/>
	                
	                <Label text="Role"/>
	                <Text text="{role}"/>
	                
	                <Label text="Department"/>
	                <Text text="{dept}"/>
	           </form:content>
	           
	       </form:SimpleForm>
	       
	       <form:SimpleForm id="idSF">
	           <form:title>
	               <core:Title text="Employee Data"/>
	           </form:title>
	           <form:content>
	                <Label text="Name"/>
	                <Text text="{name}"/>
	                
	                <Label text="Role"/>
	                <Text text="{role}"/>
	                
	                <Label text="Department"/>
	                <Text text="{dept}"/>
	           </form:content>
	           
	       </form:SimpleForm>
		</content>
	</Page>
</core:View>